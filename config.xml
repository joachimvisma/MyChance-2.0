<?xml version='1.0' encoding='utf-8'?>
<widget id="com.visma.mychance" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>MyChance</name>
    <description>
        App that will fetch potential leads for the partners from SuperOffice.
    </description>
    <author email="joachim.strand@visma.com" href="http://www.visma.com">
        Visma Software AS Support Web Team
    </author>
    <content src="www/index.html" />
    <preference name="orientation" value="portrait"/>
    <preference name="fullscreen" value="true"/>
    <preference name="show-splash-screen-spinner" value="true"/>
    <preference name="android-installLocation" value="auto"/>
    <icon src="corp_mychance_logo_blue_96px.png"/>
    <icon src="www/res/icon/android/corp_mychance_logo_blue_36px.png" gap:platform="android" gap:qualifier="ldpi"/>
    <icon src="www/res/icon/android/corp_mychance_logo_blue_48px.png" gap:platform="android" gap:qualifier="mdpi"/>
    <icon src="www/res/icon/android/corp_mychance_logo_blue_72px.png" gap:platform="android" gap:qualifier="hdpi"/>
    <icon src="www/res/icon/android/corp_mychance_logo_blue_96px.png" gap:platform="android" gap:qualifier="xhdpi"/>
    <gap:splash src="www/res/screen/android/screen-ldpi-portrait.png" gap:platform="android" gap:qualifier="port-ldpi"/>
    <gap:splash src="www/res/screen/android/screen-mdpi-portrait.png" gap:platform="android" gap:qualifier="port-mdpi"/>
    <gap:splash src="www/res/screen/android/screen-hdpi-portrait.png" gap:platform="android" gap:qualifier="port-hdpi"/>
    <gap:splash src="www/res/screen/android/screen-xhdpi-portrait.png" gap:platform="android" gap:qualifier="port-xhdpi"/>
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <preference name="carnival_android_app_key" value="166aefebd615f5e1078d1d0f3eb4f7ed771073f2"/>
        <preference name="carnival_android_project_number" value="mychance-1372"/>
    </platform>
</widget>
