<?xml version='1.0' encoding='utf-8'?>
<widget id="com.visma.mychance" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>MyChance</name>
    <description>
        App that will fetch potential leads for the partners from SuperOffice.
    </description>
    <author email="joachim.strand@visma.com" href="http://www.visma.com">
        Visma Software AS Support Web Team
    </author>
    <content src="index.html" />
    <preference name="orientation" value="portrait" />
    <preference name="fullscreen" value="true" />
    <preference name="show-splash-screen-spinner" value="true" />
    <preference name="android-installLocation" value="auto" />
    <preference name="phonegap-version" value="cli-6.3.0" />
    <preference name="webviewbounce" value="true" />
    <preference name="prerendered-icon" value="true" />
    <preference name="stay-in-webview" value="false" />
    <preference name="ios-statusbarstyle" value="black-opaque" />
    <preference name="detect-data-types" value="true" />
    <preference name="exit-on-suspend" value="false" />
    <preference name="show-splash-screen-spinner" value="true" />
    <preference name="auto-hide-splash-screen" value="true" />
    <preference name="disable-cursor" value="false" />
    <icon density="ldpi" src="www/res/icon/android/corp_mychance_logo_blue_36px.png" />
    <icon density="mdpi" src="www/res/icon/android/corp_mychance_logo_blue_48px.png" />
    <icon density="hdpi" src="www/res/icon/android/corp_mychance_logo_blue_72px.png" />
    <icon density="xhdpi" src="www/res/icon/android/corp_mychance_logo_blue_96px.png" />
    <icon platform="android" qualifier="ldpi" src="www/res/icon/android/corp_mychance_logo_blue_36px.png" />
    <icon platform="android" qualifier="mdpi" src="www/res/icon/android/corp_mychance_logo_blue_48px.png" />
    <icon platform="android" qualifier="hdpi" src="www/res/icon/android/corp_mychance_logo_blue_72px.png" />
    <icon platform="android" qualifier="xhdpi" src="www/res/icon/android/corp_mychance_logo_blue_96px.png" />
    <splash platform="android" qualifier="port-ldpi" src="www/res/screen/android/screen-ldpi-portrait.png" />
    <splash platform="android" qualifier="port-mdpi" src="www/res/screen/android/screen-mdpi-portrait.png" />
    <splash platform="android" qualifier="port-hdpi" src="www/res/screen/android/screen-hdpi-portrait.png" />
    <splash platform="android" qualifier="port-xhdpi" src="www/res/screen/android/screen-xhdpi-portrait.png" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <preference name="carnival_android_app_key" value="166aefebd615f5e1078d1d0f3eb4f7ed771073f2" />
        <preference name="carnival_android_project_number" value="mychance-1372" />
        <icon density="ldpi" src="www/res/icon/android/corp_mychance_logo_blue_36px.png" />
        <icon density="mdpi" src="www/res/icon/android/corp_mychance_logo_blue_48px.png" />
        <icon density="hdpi" src="www/res/icon/android/corp_mychance_logo_blue_72px.png" />
        <icon density="xhdpi" src="www/res/icon/android/corp_mychance_logo_blue_96px.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <preference name="carnival_ios_app_key" value="166aefebd615f5e1078d1d0f3eb4f7ed771073f2" />
    </platform>
    <plugin name="com.carnivalmobile.carnivalcordovaplugin" spec="https://github.com/carnivalmobile/carnival-sdk-cordova.git" />
    <plugin name="cordova-plugin-whitelist" spec="~1.3.0" />
    <plugin name="cordova-plugin-fullscreen" spec="~1.1.0" />
</widget>
